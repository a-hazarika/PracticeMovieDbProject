@model ProducersListingViewModel
@{
    ViewBag.Title = "Producers";
    var age = "";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="text-muted">@ViewBag.Title</h3>
        <div id="moviesTable">
            @foreach (var producer in Model.Producers)
            {
                <hr />
                <div class="row padded">
                    <div class="col-md-12">
                        <div class="col-sm-2">
                            <img class="squareImage" src="~/images/posters/No_Image_Available.gif" />
                        </div>
                        <div class="col-sm-10">
                            @if(producer.Age > 0)
                            {
                                age = ", " + producer.Age + " years";
                            }
                            else
                            {
                                age = "";
                            }
                            <a asp-controller="Producer" asp-action="Detail" asp-route-id="@producer.Id"><strong>@producer.Name</strong></a> (@producer.Sex@age)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>