@model ActorsListingViewModel
@{
    ViewBag.Title = "Actors";
    var age = "";
}

<div class="row">
    <div class="col-md-12">
        <h3 class="text-muted">@ViewBag.Title</h3>
        <div id="moviesTable">
            @foreach (var actor in Model.Actors)
            {
                <hr />
                <div class="row padded">
                    <div class="col-md-12">
                        <div class="col-sm-2">
                            <img class="squareImage" src="~/images/posters/No_Image_Available.gif" />
                        </div>
                        <div class="col-sm-10">
                            @if (actor.Age > 0)
                            {
                                age = ", " + actor.Age + " years";
                            }
                            else
                            {
                                age = "";
                            }
                            <a asp-controller="Actor" asp-action="Detail" asp-route-id="@actor.Id"><strong>@actor.Name</strong></a> (@actor.Sex@age)
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

