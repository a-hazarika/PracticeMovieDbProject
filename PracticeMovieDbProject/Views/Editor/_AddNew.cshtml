@model PersonViewModel

<div class="form-group-lg">
    <form asp-controller="Editor" asp-action="@ViewData["AddNew"]" method="post">
        <div class="row">
            <div class="col-sm-3 padded">
                <div class="col-sm">
                    <label asp-for="@Model.FirstName"> </label>
                    <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
                </div>
                <div class="col-sm">
                    <input asp-for="@Model.FirstName" class="widthFull"/>                    
                </div>
            </div>
            <div class="col-sm-3 padded">
                <div class="col-sm">
                    <label asp-for="@Model.MiddleName"> </label>
                </div>
                <div class="col-sm">
                    <input asp-for="@Model.MiddleName" class="widthFull" />
                </div>
            </div>
            <div class="col-sm-3 padded">
                <div class="col-sm">
                    <label asp-for="@Model.LastName"> </label>
                    <span asp-validation-for="@Model.LastName" class="text-danger"></span>
                </div>
                <div class="col-sm">
                    <input asp-for="@Model.LastName" class="widthFull" />
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3 padded">
                <div class="col-sm">
                    <label asp-for="@Model.DOB"> </label>
                    <span asp-validation-for="@Model.DOB" class="text-danger"></span>
                </div>
                <div class="col-sm">
                    <input asp-for="@Model.DOB" class="widthFull" />
                </div>
            </div>
            <div class="col-sm-3 padded">
                <div class="col-sm">
                    <label asp-for="@Model.Sex"></label>
                    <span asp-validation-for="@Model.Sex" class="text-danger"></span>
                </div>
                <div class="col-sm">
                    @foreach (var gender in Model.SexOptions)
                    {
                        <label class="radio-inline">
                            <input type="radio" asp-for="@Model.Sex" class="radio-inline" value="@gender.Description"/>@gender.Description
                        </label>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-9 padded">
                <div class="col-sm">
                    <label asp-for="@Model.Bio" style="vertical-align:top"> </label>
                    <span asp-validation-for="@Model.Bio" class="text-danger"></span>
                </div>
                <div class="col-sm">
                    <textarea rows="5" asp-for="@Model.Bio" id="Bio" name="Bio" class="widthFull"></textarea>
                </div>
            </div>
        </div>
        @Html.HiddenFor(x => x.PersonType)
        <div class="row padded">
            <button type="submit" class="btn btn-info btn-sm">Add</button>
            <button type="reset" class="btn btn-info btn-sm">Reset</button>
        </div>
    </form>
</div>